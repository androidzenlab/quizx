        </layout>
    </appender>       -->
   	
   	<category name="org.hibernate">
      <priority value="ERROR"/>
   </category>

   <category name="org.hibernate.cache">
      <priority value="DEBUG"/>
   </category>
   
    <!-- Root Logger -->
    <root>
        <priority value="info" />
        <appender-ref ref="fileAppender1" />
    </root>

</log4j:configuration>